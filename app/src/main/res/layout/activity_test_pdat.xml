<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.haley.test.june13th.TestPDATActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--아래 부분은 다이얼로그 창으로 옮기기-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="파일 이름을 입력하세요"/>

        <EditText
            android:id="@+id/EtInputFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="text.txt"/>


    </LinearLayout>

    <Button
        android:id="@+id/BtCreateNewFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="파일 생성"/>

    <Button
        android:id="@+id/showDialogBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="작업 진행 상황 출력"/>


</LinearLayout>
